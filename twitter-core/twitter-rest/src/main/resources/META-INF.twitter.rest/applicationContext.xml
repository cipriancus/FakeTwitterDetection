<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jaxrs="http://cxf.apache.org/jaxrs" xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://cxf.apache.org/jaxrs http://cxf.apache.org/schemas/jaxrs.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <import resource="classpath:META-INF/twitter/applicationContext.xml"/>
    <import resource="classpath:META-INF/twitter/nlp/applicationContext.xml"/>
    <import resource="classpath:META-INF/twitter/trend/applicationContext.xml"/>
    <import resource="classpath:META-INF/twitter/scrape/applicationContext.xml"/>

    <bean id="rest" class="twitter.rest.RestApi"/>

    <jaxrs:server id="restApi">
        <jaxrs:serviceBeans>
            <ref bean="rest"/>
        </jaxrs:serviceBeans>
    </jaxrs:server>

    <bean class="org.springframework.beans.factory.config.CustomScopeConfigurer">
        <property name="scopes">
            <map>
                <entry key="session">
                    <bean class="org.springframework.context.support.SimpleThreadScope"/>
                </entry>
            </map>
        </property>
    </bean>

</beans>